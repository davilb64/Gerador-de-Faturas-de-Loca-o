<BorderPane prefHeight="250.0" prefWidth="500.0" stylesheets="@../css/view.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.vendedor.VendedorFormController">
    <top>
        <Label id="cabecalho" alignment="CENTER" prefHeight="32.0" prefWidth="660.0" stylesheets="@../css/view.css" text="Cadastro/Edição Vendedor" textAlignment="CENTER" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <GridPane prefHeight="100.0" prefWidth="358.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="338.0" minWidth="10.0" prefWidth="120.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="474.0" minWidth="0.0" prefWidth="340.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label style="-fx-font-size: 18;" text="Código:"/>
                <Label prefHeight="17.0" prefWidth="110.0" style="-fx-font-size: 18;" text="Nome:"
                       GridPane.rowIndex="1"/>
                <Label style="-fx-font-size: 15;" text="&lt;&lt;sample&gt;&gt;" GridPane.columnIndex="1"/>
                <TextField fx:id="txtNome" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <HBox prefHeight="49.0" prefWidth="545.0" spacing="10.0">
                <Button mnemonicParsing="false" onAction="#salvar"
                        style="-fx-background-radius: 100; -fx-border-radius: 110;" text="Salvar"/>
                <Button mnemonicParsing="false" onAction="#cancelar"
                        style="-fx-background-radius: 100; -fx-border-radius: 110;" text="Cancelar"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <Label prefHeight="17.0" prefWidth="641.0" text="©Grupo Nova, 2025" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
    </bottom>
