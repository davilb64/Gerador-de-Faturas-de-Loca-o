<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane prefHeight="700.0" prefWidth="600.0" stylesheets="@../css/view.css" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geradordefaturas.locacao.controller.clientes.VerClienteController">
    <BorderPane prefHeight="800.0" prefWidth="585.0">
        <top>
            <Label id="cabecalho" alignment="CENTER" prefHeight="32.0" prefWidth="660.0" stylesheets="@../css/view.css"
                   text="Cliente &lt;&lt;sample&gt;&gt;" textAlignment="CENTER" BorderPane.alignment="CENTER"/>
        </top>
        <center>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="263.0" minWidth="10.0" prefWidth="155.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="380.0" minWidth="10.0" prefWidth="380.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label fx:id="lblTipoPessoa" prefHeight="17.0" prefWidth="255.0" style="-fx-font-size: 15;"
                           text="Tipo Pessoa:" textAlignment="JUSTIFY"/>
                    <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.columnIndex="1">
                        <RadioButton disable="true" mnemonicParsing="false" style="-fx-font-size: 15;"
                                     text="Física"/>
                        <RadioButton disable="true" mnemonicParsing="false" style="-fx-font-size: 15;"
                                     text="Jurídica"/>
                    </HBox>
                    <Label style="-fx-font-size: 15;" text="Nome/Razão Social:" GridPane.rowIndex="1"/>
                    <Label style="-fx-font-size: 15;" text="CPF/CNPJ:" GridPane.rowIndex="2"/>
                    <TextField  disable="true" text="&lt;&lt;sample&gt;&gt;"
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField  disable="true" text="&lt;&lt;sample&gt;&gt;"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
                <GridPane prefHeight="272.0" prefWidth="490.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="10.0" prefWidth="82.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="463.0" minWidth="10.0" prefWidth="463.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="166.0" minHeight="0.0" prefHeight="135.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="145.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label alignment="TOP_LEFT" prefHeight="143.0" prefWidth="72.0" style="-fx-font-size: 15;"
                           text="Telefones"/>
                    <Label alignment="TOP_LEFT" prefHeight="210.0" prefWidth="56.0" style="-fx-font-size: 15;"
                           text="E-mails:" GridPane.rowIndex="1"/>
                    <HBox prefHeight="131.0" prefWidth="398.0" spacing="10.0" GridPane.columnIndex="1">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <TableView editable="true" prefHeight="115.0" prefWidth="470.0">
                            <columns>
                                <TableColumn prefWidth="75.0" text="Telefones"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </HBox>
                    <HBox prefHeight="86.0" prefWidth="377.0" spacing="10.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="1">
                        <GridPane.margin>
                            <Insets/>
                        </GridPane.margin>
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <TableView editable="true" prefHeight="125.0" prefWidth="475.0">
                            <columns>
                                <TableColumn prefWidth="75.0" text="E-mails"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </HBox>
                </GridPane>
                <VBox prefHeight="199.0" prefWidth="545.0" spacing="20.0">
                    <Label style="-fx-font-size: 18;" text="Endereços:"/>
                    <TableView prefHeight="155.0" prefWidth="545.0">
                        <columns>
                            <TableColumn prefWidth="75.0" text="Logradouro"/>
                            <TableColumn prefWidth="75.0" text="Nº"/>
                            <TableColumn prefWidth="75.0" text="Bairro"/>
                            <TableColumn prefWidth="75.0" text="Município"/>
                            <TableColumn prefWidth="75.0" text="UF"/>
                            <TableColumn prefWidth="75.0" text="CEP"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
                <HBox prefHeight="49.0" prefWidth="545.0" spacing="10.0">
                    <Button mnemonicParsing="false" onAction="#salvar"
                            style="-fx-background-radius: 100; -fx-border-radius: 110;" text="Sair"/>
                </HBox>
            </VBox>
        </center>
        <bottom>
            <Label prefHeight="17.0" prefWidth="641.0" text="©Grupo Nova, 2025" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </Label>
        </bottom>
    </BorderPane>
</ScrollPane>
