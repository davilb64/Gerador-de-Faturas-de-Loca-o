<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="585.0" stylesheets="@../css/view.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geradordefaturas.locacao.controller.fichas.FichaFormController">
    <top>
        <Label id="cabecalho" alignment="CENTER" prefHeight="32.0" prefWidth="660.0" stylesheets="@../css/view.css" text="Ficha Contrato &lt;&lt;sample&gt;&gt;" textAlignment="CENTER" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox prefHeight="22.0" prefWidth="545.0">
                <Label fx:id="lblContrato" style="-fx-font-size: 15;" text="Contrato: &lt;&lt;sample&gt;&gt;"/>
                <Region prefHeight="42.0" prefWidth="241.0" HBox.hgrow="ALWAYS"/>
                <Label style="-fx-font-size: 15;" text="Cliente: &lt;&lt;Sample&gt;&gt;"/>
            </HBox>
            <TableView prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn prefWidth="75.0" text="Nº"/>
                    <TableColumn prefWidth="75.0" text="Data Emissão"/>
                    <TableColumn prefWidth="75.0" text="Vencimento"/>
                    <TableColumn prefWidth="75.0" text="Valor"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <Label style="-fx-font-size: 18;" text="Valor Total da Ficha: &lt;&lt;sample&gt;&gt;"/>
            <HBox prefHeight="49.0" prefWidth="545.0" spacing="10.0">
                <Button mnemonicParsing="false" style="-fx-background-radius: 100; -fx-border-radius: 110;"
                        text="Gerar PDF Ficha"/>
                <Button mnemonicParsing="false" onAction="#cancelar"
                        style="-fx-background-radius: 100; -fx-border-radius: 110;" text="Cancelar"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <Label prefHeight="17.0" prefWidth="641.0" text="©Grupo Nova, 2025" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Label>
    </bottom>
</BorderPane>
